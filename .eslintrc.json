{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": [
                  "*"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "plugins": [
        "simple-import-sort"
      ],
      "extends": [
        "plugin:@nx/typescript"
      ],
      "rules": {
        "comma-dangle": "error",
        "semi": "error",
        "simple-import-sort/exports": "warn",
        "simple-import-sort/imports": [
          "warn",
          {
            "groups": [
              [
                "^\\u0000"
              ],
              [
                "^node:"
              ],
              [
                "^@?\\w"
              ],
              [
                "^@?(cht).*"
              ],
              [
                "^"
              ],
              [
                "^\\."
              ],
              [
                "^\\.\\."
              ]
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nx/javascript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx"
      ],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
